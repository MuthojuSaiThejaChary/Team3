@model TwitterClone.Model.PersonFollowViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
    <style>
        td {
            padding: 15px;
            text-align: left;
        }
        td {
            border-bottom: 1px solid #ddd;
        }
        tr:hover {background-color: #f5f5f5;}
    </style>
</head>
<body>
    <center>
        <div>
            <h1>@Model.Person.Fullname</h1>
            <hr />
            <dl class="row">

                <table >
                    <tr>
                        <td> @Html.DisplayNameFor(model => model.Person.Fullname)</td>


                        <td> @Html.DisplayFor(model => model.Person.Fullname)</td>
                    </tr>
                    <tr>
                        <td>  @Html.DisplayNameFor(model => model.Person.Email)</td>

                        <td>   @Html.DisplayFor(model => model.Person.Email)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Person.Joined)</td>

                        <td>@Html.DisplayFor(model => model.Person.Joined)</td>
                    </tr>
                </table>

            </dl>
        </div>
        <div>
            <form asp-action="Details">
                <div class="form-group">
                    <input type="submit" value="Follow" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <div>
    </center>

    <a asp-action="Profile">Dashboard</a>
    </div>
</body>
</html>
